<p><%= link_to 'Add new Company', new_admin_company_path, method: :get, class: "btn btn-info" %></p>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name company</th>
    <th>Web-site</th>
    <th>Count vacancies</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% companies.each do |company| %>
      <tr>
        <td>
          <%= link_to company.name, admin_company_path(company)%>
        </td>
        <td>
          <%= company.link%>
        </td>
        <td>
          <%= company.vacancies.count %>
        </td>
        <td>
          <%=link_to 'delete',admin_company_path(company),method: :delete,data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>

  <% end %>
  </tbody>
</table>