.form-group
  = f.label :companies
  = f.collection_select(:company_id, companies, :id, :name)
  = link_to 'Add new company',new_admin_company_path,class: 'btn btn-sm btn-info'
.form-group
  = f.label :country
  = f.select(:country, countries, {},:class => 'form-control' )
.form-group
  = f.label :city
  = f.text_field :city, class: 'form-control'
.form-group
  = f.label :title,"Title Job"
  = f.text_field :title, class: 'form-control'
.form-group
  = f.label :description
  = f.text_area :description, cols: 20, rows: 20,class: 'form-control'
.form-group
  = f.label :deadline
  = f.date_select :deadline,start_year: Date.current.year,:end_year => Date.current.year + 1,use_month_numbers: true
