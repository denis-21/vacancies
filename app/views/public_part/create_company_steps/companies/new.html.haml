= render 'public_part/create_company_steps/shared/steps'

.col-md-6
  = render 'shared/error_msg', object: new_company

= form_for new_company, url: create_company_steps_companies_path, method: :post, html: { multipart: true }  do |f|
  .col-md-8
    .form-group
      = f.label :continent
      = f.select(:continent, continents, { include_blank: 'Select continent' }, class: 'form-control', data: { remote: true, url: url_for( action: :index, controller: '/render_countries') }  )
    .form-group
      = f.label :country
      = f.select(:country, countries(f.object.continent), {}, class: 'form-control' )
    .form-group
      = f.label :city
      = f.text_field :city, class: 'form-control'
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :link
      = f.text_field :link, class: 'form-control'
  .col-md-8
    .form-group
      = f.submit 'Next', class: 'btn btn-success'
