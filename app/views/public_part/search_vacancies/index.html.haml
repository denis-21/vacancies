.search_bar.margin_bottom
  .col-md-12
    = form_tag search_vacancies_path, method: :get, id: 'search-form',class: 'form-inline limit_form' do
      = render '/public_part/vacancies/search_form', companies: companies,countries:countries
      %span.pull-right
        = select_tag('limit', options_for_select([1,5,10,20],params[:limit] || 5), class: 'form-control')
.content
  = render '/public_part/vacancies/list_vacancies', vacancies: vacancies
