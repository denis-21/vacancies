.form-group
  = select_tag('company_id',options_from_collection_for_select(companies, :id, :name, params[:company_id]),include_blank: 'Select company',class: 'form-control')
.form-group
  = select_tag('continent', options_for_select(continents,params[:continent]),include_blank: 'Select continent', class: 'form-control')
.form-group
  = select_tag('country', options_for_select(countries,params[:country]),include_blank: 'Select country', class: 'form-control')
.form-group
  = text_field_tag 'city', params[:city], placeholder: 'Enter city', class: 'form-control'
= submit_tag 'Search', class: 'btn btn-default'
