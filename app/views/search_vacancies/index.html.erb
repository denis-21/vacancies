<div class="search_bar margin_bottom">
  <div class="col-md-12">
    <%=form_tag search_vacancies_path, method: :get, id: 'search-form',class: 'form-inline limit_form' do%>

        <%= render 'vacancies/search_form', companies: companies,countries:countries %>

        <span class="pull-right">
            <%= select_tag('limit', options_for_select([1,5,10,20],params[:limit] || 5), class: 'form-control') %>
        </span>

    <%end%>
  </div>
</div>

<div class="content">
  <%= render 'vacancies/list_vacancies', vacancies: vacancies %>
</div>
