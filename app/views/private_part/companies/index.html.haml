%p= link_to 'Add new Company', new_manage_company_path, method: :get, class: "btn btn-info new_company"
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Name company
      %th Web-site
      %th Count vacancies
      %th
  %tbody
    - companies.each do |company|
      %tr
        %td= link_to company.name, manage_company_path(company)
        %td= company.link
        %td= company.vacancies.size
        %td= link_to 'delete', manage_company_path(company),method: :delete,data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger'
