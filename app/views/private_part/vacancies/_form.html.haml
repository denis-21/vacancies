.form-group
  = f.label :companies
  = f.collection_select(:company_id, companies, :id, :name)
.form-group
  = f.label :continent
  = f.select(:continent, continents, { include_blank: 'Select continent' }, class: 'form-control', data: { remote: true, url: url_for( action: :index, controller: '/render_countries') }  )
.form-group
  = f.label :country
  = f.select(:country, countries(f.object.continent), {}, class: 'form-control' )
.form-group
  = f.label :city
  = f.text_field :city, class: 'form-control'
.form-group
  = f.label :title,"Title Job"
  = f.text_field :title, class: 'form-control'
.form-group
  = f.label :description
  = f.text_area :description, cols: 20, rows: 20,class: 'form-control'
.form-group
  = f.label :deadline
  = f.date_select :deadline, start_year: Date.current.year, use_month_numbers: true
