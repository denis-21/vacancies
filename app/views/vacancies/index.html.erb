<div>
  <%=form_tag search_vacancies_path, method: :get, id: 'search-form',class: 'navbar-form' do%>

      <div class="form-group">

        <%= select_tag('company_id',options_from_collection_for_select(companies, :id, :name, params[:company_id]),include_blank: 'Select company',class: 'form-control') %>
      </div>

      <div class="form-group">
        <%= select_tag('country', options_for_select(countries,params[:country]),include_blank: 'Select city', class: 'form-control') %>
      </div>

      <div class="form-group">
        <%=text_field_tag 'city', params[:city], placeholder: 'Enter city', class: 'form-control' %>
      </div>

      <%=submit_tag 'Search', class: 'btn btn-default' %>

  <%end%>
</div>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Job Title</th>
    <th>Company</th>
    <th>Country</th>
    <th>City</th>
    <th>Deadline</th>

  </tr>
  </thead>
  <tbody>
  <% vacancies.each do |vacancy| %>
      <tr>
        <td>
          <%= link_to vacancy.title, vacancy_path(vacancy)%>
        </td>
        <td>
          <%= vacancy.company.name %>
        </td>
        <td>
          <%= vacancy.country %>
        </td>
        <td>
          <%= vacancy.city %>
        </td>
        <td>
          <%= vacancy.deadline.to_s(:human) %>
        </td>
      </tr>

  <% end %>
  </tbody>
</table>



